<!DOCTYPE html>
<html lang="en">

<head>
  <title>Entry</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <!-- linking font awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/users.js"></script>
</head>

<body>
  <div class="entry-container">


  <div class="left-entry">
  <%- include('partials/_header') %>
  <h1>Write Entry</h1>
  <form method="POST" action="/story/<%= story[0].story_id %>/<%= story[story.length - 1].story_block_id %>/entry/post">
  <textarea type="text" name="entry" placeholder="Write your entry..."></textarea><br><br>
  <input class="pencil-svg" type="image"src="/svgs/pencil_icon.svg" alt="Submit" width="150px"/>
  </form>
  </div>


  <div class="right-entry">
  <!-- initial story and title -->
  <h1><%= story[0].story_title %></h1>
  <p>
  <%= story[0].initial_story %><br><br>

  <% for (const arrItem of story) { %>
    <!-- <%- JSON.stringify(arrItem.block_completed) %> -->
    <% if (arrItem.block_completed === true && arrItem.story_block_id === arrItem.entry_block && arrItem.winning_entry === true) { %>
      <!-- check all story entries connected to the block_id and only show the ones that are true -->
      <%- arrItem.entry_text %><br><br>
    <% } %>
  <% } %>
  </p>
  </div>


  <!-- <%- JSON.stringify(story[story.length - 1].story_completion_status) %> -->




  <!-- if condition for if last story block is not complete -->


</div>
</body>
</html>
